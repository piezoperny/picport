{{- /* Generate a JSON list of images that contain coordinates (marked by "--") */ -}}
[
    {{- $images := slice -}}
    {{- range (.Site.GetPage "section" "gallery").Sections -}}
        {{- range .Resources.ByType "image" -}}
            {{- if in .Name "--" -}}
                {{- $images = $images | append . -}}
            {{- end -}}
        {{- end -}}
    {{- end -}}

    {{- range $index, $element := $images -}}
        {{- if $index -}},{{- end -}}
        {
            "url": "{{ .RelPermalink }}",
            "name": "{{ .Name }}" 
        }
    {{- end -}}
]
